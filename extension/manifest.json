{
    "manifest_version": 3,
    "name": "Superscan MVP",
    "version": "0.1.0",
    "description": "書画カメラ連携システム Superscan の試作版",
    "permissions": [
        "storage",
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*",
        "https://digikar.jp/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icons/icon48.png"
    }
}